 <link rel="stylesheet" href="{{'fs-hero-banner.css' | asset_url }}">
 
 <!-- Banner start -->
 <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        {% for block in section.blocks %}     
            <div class="carousel-item {% if forloop.first%}active{% endif %}">
                <img src="{{block.settings.image | img_url: 'master'}}" class="d-block w-100" alt="...">
                <div class="carousel-caption container d-none d-md-block">
                    <h5 class="banner-title"><span>-20%</span> on Spaceships</h5>
                    <a href="{{block.settings.btn-url}}">
                        <button class="btn banner-shop-btn">{{block.settings.btn-text}}</button>
                    </a>
                </div>
                <!-- <div class="container banner-main-text">
                    <h2 class="banner-prepare-heading">Prepare your</h2>
                    <h2 class="banner-fleet-heading">Fleet</h2>
                </div> -->
            </div>
        {% endfor %}
    </div>
</div>
<!-- Banner end -->

{% schema %}
    {
        "name": "FS Hero Banner",
        "settings": [
            
        ],
        "blocks": [
            {
                "type": "Slide",
                "name": "Slide",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Background Image"
                    },
                    {
                        "type": "url",
                        "id": "btn-url",
                        "label": "Button Url"
                    },
                    {
                        "type": "text",
                        "id": "btn-text",
                        "label": "Button Text"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "FS Hero Banner"
            }
        ]
    }
{% endschema %}